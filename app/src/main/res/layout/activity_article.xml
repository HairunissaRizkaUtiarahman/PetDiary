<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_product_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/black">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/back_button"
            android:src="@drawable/arrow_back" />

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_share" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/frame_2" />

            <TextView
                android:id="@+id/tittle_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/pentingnya_perawatan_kesehatan_rutin_untuk_kucing_kesayangan_anda"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/care_and_health"
                android:textColor="@color/black_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/article_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="@string/_15_maret_2024"
                android:textColor="#A3A0A0" />

            <TextView
                android:id="@+id/article_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/roboto"
                android:text="@string/sebagai_pemilik_kucing_memastikan_kesehatan_dan_kesejahteraan_hewan_peliharaan_anda_adalah_tanggung_jawab_yang_sangat_penting_merawat_kesehatan_kucing_secara_teratur_bukan_hanya_tentang_memberikan_makanan_yang_baik_dan_memberi_perhatian_tetapi_juga_melibatkan_upaya_pencegahan_dan_pengawasan_yang_teratur_dalam_artikel_ini_kami_akan_membahas_pentingnya_perawatan_kesehatan_rutin_untuk_kucing_kesayangan_anda_1_kunjungan_rutin_ke_dokter_hewan_penting_untuk_menjadwalkan_kunjungan_rutin_ke_dokter_hewan_setidaknya_sekali_setahun_selama_kunjungan_ini_dokter_hewan_dapat_melakukan_pemeriksaan_fisik_menyeluruh_vaksinasi_yang_diperlukan_dan_memberikan_saran_tentang_perawatan_kesehatan_yang_tepat_untuk_kucing_anda_pemeriksaan_rutin_ini_juga_membantu_dalam_mendeteksi_masalah_kesehatan_yang_mungkin_tidak_terlihat_secara_kasat_mata_2_vaksinasi_yang_tepat_waktu_vaksinasi_adalah_bagian_penting_dari_perawatan_kesehatan_kucing_vaksin_melindungi_kucing_dari_penyakit_serius_seperti_rabies_panleukopenia_herpesvirus_felis_dan_calicivirus_felis_pastikan_untuk_mematuhi_jadwal_vaksinasi_yang_direkomendasikan_oleh_dokter_hewan_anda_untuk_memastikan_kucing_anda_tetap_sehat_dan_terlindungi_3_perawatan_gigi_dan_mulut_kesehatan_gigi_dan_mulut_sangat_penting_untuk_kucing_pemeriksaan_rutin_gigi_dan_pembersihan_oleh_dokter_hewan_dapat_mencegah_masalah_seperti_penyakit_gusi_plak_dan_tartar_selain_itu_memberikan_makanan_khusus_untuk_kesehatan_gigi_dan_memberikan_mainan_kunyah_dapat_membantu_menjaga_kebersihan_mulut_kucing_anda_perawatan_kesehatan_rutin_adalah_langkah_penting_dalam_menjaga_kesehatan_dan_kesejahteraan_kucing_kesayangan_anda_dengan_menjadwalkan_kunjungan_rutin_ke_dokter_hewan_mematuhi_jadwal_vaksinasi_merawat_gigi_dan_mulut_menjaga_bulu_dan_kulit_serta_memberikan_diet_seimbang_dan_aktivitas_fisik_yang_cukup_anda_dapat_membantu_kucing_anda_hidup_lebih_lama_dan_lebih_sehat_ingatlah_bahwa_investasi_dalam_perawatan_kesehatan_kucing_anda_akan_membayar_denga