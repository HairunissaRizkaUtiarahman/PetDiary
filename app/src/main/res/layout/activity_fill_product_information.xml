<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="textStart">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pet_category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/black">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@color/white"
            android:contentDescription="@string/back_to_choose_product_category_page_button"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/pet_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/fill_product_information"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/upload_photo_button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:background="@drawable/background_ic_camera"
        android:contentDescription="@string/upload_photo"
        app:srcCompat="@drawable/ic_camera" />

    <TextView
        android:id="@+id/brand_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/brand_name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/brandNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false">

        <!-- Brand Name Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/formInputBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:inputType="text"
            android:maxLength="30"
            android:background="@drawable/background_icon_home"
            android:gravity="top"
            android:hint="@string/enter_brand_name"
            android:nestedScrollingEnabled="true"
            android:textAlignment="gravity" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/product_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/product_name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/productNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/formInputProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_icon_home"
            android:gravity="top"
            android:hint="@string/enter_product_name"
            android:inputType="text"
            android:maxLength="30"
            android:nestedScrollingEnabled="true"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/warning_product_name_already_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:text="Product name already exist!"
            android:textColor="@color/orange_main"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/Description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/formInputDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_margin="15dp"
            android:background="@drawable/background_icon_home"
            android:gravity="top"
            android:minEms="10"
            android:maxEms="30"
            android:minLines="3"
            android:hint="@string/enter_product_description"
            android:inputType="textMultiLine|textCapSentences"
            android:nestedScrollingEnabled="true"
            android:textAlignment="gravity" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="10dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:text="@string/submit"
        android:enabled="false"
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:iconGravity="textStart" />

</LinearLayout>
