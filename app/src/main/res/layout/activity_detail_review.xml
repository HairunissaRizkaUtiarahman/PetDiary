<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/review_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/black">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_to_product_detail_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@color/white"
            android:contentDescription="@string/back_to_product_detail_button"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/pet_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/review_detail"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/card_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/productCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/background_icon_home"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pet_category_toolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_icon_home"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/product_picture_raview_detail_page"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/contoh_product_image" />

                        <LinearLayout
                            android:id="@+id/product_information"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/brand_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Whiskas"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Tuna for kitten"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/product_type_animal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto"
                                android:text="For cat" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/reviewCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/background_icon_home"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_icon_home"
                        android:elevation="5dp"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_photo_profile"
                            android:layout_width="100dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:padding="20dp"
                            android:src="@drawable/ic_number_4"
                            app:civ_border_color="@color/black_grey"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Kalica" />

                        <LinearLayout
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ratingBar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:max="5" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/recomended_or_not_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="Recommended"
                            android:textAlignment="center"
                            android:textColor="@color/green_main"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/usage_period_information"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/usage_period_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="15dp"
                                android:text="@string/usage_period"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/usage_period_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:paddingEnd="15dp"
                                android:text="3 Months"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/date_information"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/date_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="15dp"
                                android:text="@string/date"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/review_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:paddingEnd="15dp"
                                android:text="12 February 2024"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/deskripsi_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_main"
                            android:fontFamily="@font/roboto"
                            android:minHeight="400dp"
                            android:padding="14dp"
                            android:text="Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing.Whiskas Tuna benar-benar menjadi favorit kucing saya. Dibuat dari bahan berkualitas tinggi dan diisi dengan catnip yang kuat, makanan ini tidak hanya enak, tetapi juga merangsang insting berburu kucing."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/view_all_comments_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:elevation="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/see_comment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/textView88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="View all"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="4"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="comments"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15sp"
                    android:background="@drawable/background_icon_home"
                    android:isScrollContainer="true"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="68dp"
                    android:visibility="gone"
                    tools:listitem="@layout/list_review_comment" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/layout_comment_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="bottom"
            android:padding="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/comment_TIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toStartOf="@+id/send_Btn"
                    app:counterEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/comment_TIET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Comment" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/send_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/send_comment"
                    app:icon="@drawable/ic_send"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


</LinearLayout>