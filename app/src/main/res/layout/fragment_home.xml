<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/orange_secondary"
    android:backgroundTintMode="add"
    android:isScrollContainer="true"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical"
    tools:context=".view.fragment.dashboard.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/home_name_user"
            app:titleTextColor="@color/black">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage_IV"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="18dp"
                android:contentDescription="@string/notification_icon_description"
                android:scaleType="centerCrop"
                android:src="@drawable/image_profile" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/poster_review_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/image_poster_cd"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/poster_home_page" />

                    <Button
                        android:id="@+id/manage_pet_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="25dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/manage_pet" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/pet_diary_features"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginEnd="5dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/review_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/review_icon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:contentDescription="@string/image_review_cd"
                            app:srcCompat="@drawable/icon_review" />

                        <TextView
                            android:id="@+id/review_text"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/review_n"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/find_petshop_clinic_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/ipetshop_clinic_button_icon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:contentDescription="@string/image_pet_shop_vet_cd"
                            app:srcCompat="@drawable/contoh_icon_baru__10_" />

                        <TextView
                            android:id="@+id/petshop_clinic_button_text"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/find_pet_shop_vet"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/community_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/community_icon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:contentDescription="@string/image_community_cd"
                            app:srcCompat="@drawable/contoh_icon_baru__9_" />

                        <TextView
                            android:id="@+id/community_text"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/community_n"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/article_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/Article_icon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:contentDescription="@string/image_article_cd"
                            app:srcCompat="@drawable/contoh_icon_baru__11_" />

                        <TextView
                            android:id="@+id/Article_text"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/article_n"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="70dp"
                        android:contentDescription="@string/image_start_cd"
                        android:layout_height="70dp"
                        android:src="@drawable/contoh_icon_baru__12_" />

                    <TextView
                        android:id="@+id/most_reviews_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_black"
                        android:paddingHorizontal="10dp"
                        android:text="@string/most_reviews_products"
                        android:textColor="@color/orange_main"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:contentDescription="@string/image_start_cd"
                        android:src="@drawable/contoh_icon_baru__12_" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_top_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_most_review"
                    android:isScrollContainer="true"
                    android:nestedScrollingEnabled="true"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_most_review_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:isScrollContainer="true"
                        android:nestedScrollingEnabled="true"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_product" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/image_next_cd"
                        android:rotationY="180"
                        android:src="@drawable/ic_back" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>